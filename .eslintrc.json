{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "mongo": true,
        "worker": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "rules": {
        "indent": ["error", 4],
        "no-console": "off",
        "no-restricted-syntax": "off",
        "import/extensions": "off",
        "no-underscore-dangle": "off",
        "no-param-reassign": "off"
    }
}